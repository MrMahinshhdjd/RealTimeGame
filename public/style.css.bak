/* General Styling */
body {
    font-family: 'Poppins', sans-serif;
    text-align: center;
    background: linear-gradient(45deg, #1e3c72, #2a5298);
    color: white;
    margin: 0;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
}

/* Container */
.container {
    background: rgba(0, 0, 0, 0.7);
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.5);
}

/* Multiplayer Button */
#multiplayer {
    background: #ff9800;
    border: none;
    padding: 15px 30px;
    font-size: 18px;
    color: white;
    border-radius: 5px;
    cursor: pointer;
    transition: 0.3s;
}

#multiplayer:hover {
    background: #e68900;
}

/* Server Status */
#server-status {
    margin-top: 10px;
    font-size: 18px;
    font-weight: bold;
}

/* Game Canvas */
#game {
    display: none;
    margin-top: 20px;
}

#canvas {
    width: 500px;
    height: 500px;
    border: 3px solid white;
    margin-top: 10px;
    position: relative;
    background: #e0e0e0;
    border-radius: 5px;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);
}

/* Block Styling */
.block {
    width: 20px;
    height: 20px;
    background: linear-gradient(45deg, #ff0000, #ff7300);
    position: absolute;
    border-radius: 5px;
    box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.5);
}